<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <!-- Set the dark grey color for the enabled state -->
            <solid android:color="#FF8800" />
            <corners android:radius="8dp" /> <!-- You can adjust the radius as needed -->
        </shape>
    </item>
    <item android:state_enabled="false">
        <!-- You can define a different background for the disabled state if needed -->
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
